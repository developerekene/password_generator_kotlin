<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Generator"
        android:layout_above="@id/text_description"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_unique_password"
        android:layout_marginBottom="140dp"
        android:text="Please Create your Unique Password"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:id="@+id/layout_unique_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="YOUR UNIQUE PASSWORD GOES HERE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

