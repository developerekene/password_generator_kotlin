    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear_field_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_unique_password"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="65dp"
        android:background="#0726C1"
        android:text="Clear Field"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/copy_text_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_unique_password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="12dp"
        android:background="#880808"
        android:text="Copy Text"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Generate_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_below="@id/clear_field_button"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentRight="true"
        android:text="Generate Password"
        android:textColor="@color/white"/>

